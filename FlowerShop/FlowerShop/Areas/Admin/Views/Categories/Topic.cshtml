@model IEnumerable<FlowerShop.Models.Topic>

@{
    ViewBag.Title = "Topic";
}

<section class="content-header">
    <h1>
        Topic
        <small><a href="@Url.Action("Index", "Categories")"><< Back to categories list</a></small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin/Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="@Url.Action("Index", "Categories")">Categories</a></li>
        <li><a href="#">Topic</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    @*<h3 class="box-title" style="float:left">Sản Phẩm</h3>*@
                </div>
                @using (Html.BeginForm())
                {
                    <div class="input-group" style="margin-left: 10px">
                        <input type="text" name="kw" class="form-control" placeholder="Search..." style="width: 300px">
                        <span>
                            <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                }
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Topic Name</th>
                                <th>Create Date</th>
                                <th>IsAcvite</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.TopicName</td>
                                    <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                    <td>@item.IsActive</td>
                                    <td><a href="@Url.Action("EditTopic", "Categories", new { id = item.Id })" class="btn btn-instagram btn-block myaction">Edit</a></td>
                                   
                                </tr>
                            }
                        </tbody>
                        <a href="@Url.Action("CreateTopic", "Categories")" class="btn btn-block btn-success myaction" style="margin-bottom: 20px">Add New Topic</a>
                    </table>
                    @*<p>
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, kw = ViewBag.kw, sort = ViewBag.sort }))
                        </p>*@

                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->