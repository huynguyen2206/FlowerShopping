@model IEnumerable<FlowerShop.Models.Disable>

@{
    ViewBag.Title = "Display";
}

<section class="content-header">
    <h1>
        Display
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Dashboard")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Display</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                </div>

                <!-- /.box-header -->
                <div class="box-body">
                    @*<a href="@Url.Action("Create", "Coupons")" class="btn btn-block btn-success" style="margin-bottom:10px">Add New Coupon</a>*@
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Display Name</th>
                                <th>IsActive</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DisplayName</td>
                                    @if (item.IsActive)
                                    {
                                        <td><input type="checkbox" class="minimal" pid="@item.Id" checked></td>
                                    }
                                    else
                                    {
                                        <td><input type="checkbox" class="minimal" pid="@item.Id"></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                    @*<p>
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, kw = ViewBag.kw, sort = ViewBag.sort }))
                        </p>*@

                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->


<script>
    $(document).ready(function () {

        $('.minimal').change(function () {
            var check = $(this);
            var pid = check.attr("pid");
            $.ajax({
                url: '/Admin/Systems/Display',
                type: "POST",
                data: "pid=" + pid,
                success: function (response) {
                    if (response == "OK") {
                        //location.href = "/Admin/Permisstions/Index";
                    }
                }
            });

        });

    })
</script>

